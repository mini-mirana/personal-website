{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix .",
    "format": "prettier ./**/*.{js,jsx,ts,tsx,css,scss,md,json} --config ./.prettierrc --write",
    "formatmd": "prettier --write",
    "success-message": "echo '🚀 You are ready to go  🚀️'",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "post-commit": "yarn run success-message",
    "commit-msg": "npx --no-install commitlint --edit $1 --verbose",
    "test": "jest --selectProjects unit",
    "test:u": "jest --selectProjects unit --updateSnapshot",
    "test:e2e": "yarn playwright test",
    "test:ue2e": "yarn playwright test --update-snapshots"
  },
  "dependencies": {
    "@react-spring/three": "^9.4.3",
    "@react-three/drei": "^8.10.6",
    "@react-three/fiber": "^7.0.26",
    "@react-three/flex": "^0.7.0",
    "@react-three/postprocessing": "^2.1.5",
    "arwes": "1.0.0-alpha.5",
    "lodash": "^4.17.21",
    "next": "^12.1.0",
    "react": "^18.0.0-rc.2",
    "react-dom": "^18.0.0-rc.2",
    "react-merge-refs": "^1.1.0",
    "react-use-gesture": "^9.1.3",
    "react-useanimations": "^2.0.8",
    "scheduler": "^0.20.2",
    "three": "^0.138.0",
    "troika-three-text": "^0.45.0",
    "tunnel-rat": "^0.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@next/eslint-plugin-next": "^12.1.0",
    "@playwright/test": "^1.19.2",
    "@react-three/test-renderer": "^7.0.25",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "autoprefixer": "^10.4.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "jest-image-snapshot": "^4.5.1",
    "lint-staged": "^12.3.4",
    "playwright": "^1.19.2",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "tailwindcss": "^3.0.23"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html}": [
      "npm run lint",
      "npm run format"
    ],
    "*.md": [
      "npm run formatmd",
      "git add"
    ]
  },
  "commitlint": {
    "rules": {
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ]
    }
  },
  "jest": {
    "projects": [
      "tests/unit/jest.config.js"
    ]
  },
  "description": "Personal portfolio website",
  "main": "src/pages/index.js",
  "repository": "https://github.com/mini-mirana/personal-website.git",
  "author": "ALi <s.arme@ya.ru>"
}
